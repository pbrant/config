{
  "languageserver": {
    "purescript": {
      "command": "purescript-language-server",
      "args": ["--stdio"],
      "filetypes": ["purescript"],
      "rootPatterns": ["bower.json"],
      "settings": {
        "purescript": {
          "addNpmPath": true,
          "buildCommand": "pulp build -I json-common/src/main/purescript -o case-mgmt/target/purescript --src-path case-mgmt/src/main/purescript -- --json-errors",
          "outputDirectory": "case-mgmt/target/purescript",
          "sourcePath": "*/src/main/purescript"
        }
      }
    },
    "metals": {
      "command": "metals-vim",
      "rootPatterns": ["build.sbt"],
      "filetypes": ["scala", "sbt"]
    }
  }
}
